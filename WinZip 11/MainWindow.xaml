<Window x:Class="WinZip_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinZip_11"
        mc:Ignorable="d"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        Style="{StaticResource UiWindow}"
        Title="MainWindow" Height="492" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <wpfui:FontIcon Width="60" Height="30" Glyph="&#xF012;" Foreground="Orange" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <wpfui:TitleBar x:Name="TB1" Margin="60,0,0,0" ForceShutdown="True" CanMaximize="False" Header="     Extract Compressed(Zipped) Folders" FontSize="19" VerticalContentAlignment="Center" FontFamily="Segoe UI Variable" FontWeight="DemiBold" VerticalAlignment="Center" Height="30"/>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" Height="30" Background="#FF2B2B2B" >
                <wpfui:Button Margin="4" Content="Extract" Background="#FF333232" Foreground="White" Padding="0" FontSize="12" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="26" Width="78" Click="Button_Click_2"/>
                <wpfui:Button Margin="4" Content="Archive" Background="#FF333232" Foreground="White" Padding="0" FontSize="12" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="26" Width="78" Click="Button_Click_3"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Label x:Name="Head" Content="Select a Destination and Extract Files" Foreground="#FF007FDE" Padding="10" FontFamily="Segoe UI Variable Display" FontWeight="Medium" FontSize="18" Margin="0,0,0,326"/>
            <Label x:Name="Body2" Content="Files will be extracted to this folder:" Height="20" Foreground="Gray" Padding="19,0,0,0" Margin="1,118,-1,236" FontSize="12" FontFamily="Segoe UI Variable Display" FontWeight="Medium"/>
            <wpfui:TextBox x:Name="FolderN" Height="12" Margin="0,138,306,202" Placeholder="Select your Zip File or Enter the full path" PlaceholderVisible="True" HorizontalAlignment="Right" Width="472" TextChanged="FolderN_TextChanged"/>
            <wpfui:Button x:Name="Button2" Content="Browse..." Margin="0,142,210,0" Background="#FF333232" Foreground="White" Padding="0" FontSize="13" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="28" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91" Click="Button_Click_1"/>
            <wpfui:ToggleSwitch x:Name="TS1" Margin="20, 0, 0, 0"  Height="23" Foreground="Gray" Content="Show extracted files when complete" FontFamily="Segoe UI Variable Display" FontWeight="Medium"/>
            <Label x:Name="Body1" Content="Select compressed file:" Height="20" Foreground="Gray" Padding="19,0,0,0" Margin="1,43,-1,311" FontSize="12" FontFamily="Segoe UI Variable Display" FontWeight="Medium"/>
            <wpfui:TextBox x:Name="FileN" Height="12" Margin="0,63,306,277" Placeholder="Select your Zip File or Enter the full path" PlaceholderVisible="True" HorizontalAlignment="Right" Width="472"/>
            <wpfui:Button x:Name="Button1" Content="Browse..." Margin="0,67,210,0" Background="#FF333232" Foreground="White" Padding="0" FontSize="13" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="28" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91" Click="Button_Click"/>
            <Label x:Name="NoEaster" Content="P.S. There is no easter-egg" Height="20" Foreground="Gray" Padding="19,0,0,0" Margin="0,203,0,151" FontSize="12" FontFamily="Segoe UI Variable Display" FontWeight="Medium"/>
            <wpfui:Button x:Name="Button3" Visibility="Hidden" Content="Choose..." Margin="0,-27,5,0" Background="#FF333232" Foreground="White" Padding="0" FontSize="13" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91" Click="Button3_Click"/>
            <wpfui:Button x:Name="Button4" Visibility="Hidden" Content="Save Zip File" Margin="0,-27,117,0" Background="#FF333232" Foreground="White" Padding="0" FontSize="13" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="74" Click="Button4_Click"/>
        </Grid>
        <Grid Grid.Row="3">
            <wpfui:Button Content="Start!" Margin="710,4,10,0" Background="#FF444444" Foreground="White" Padding="0" FontSize="13" FontFamily="Segoe UI Variable Display" FontWeight="Medium" Height="30" VerticalAlignment="Top" Click="Button_Click_4"/>
        </Grid>
    </Grid>
</Window>
